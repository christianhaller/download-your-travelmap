{
  "name": "download-your-travelmap",
  "version": "1.0.0",
  "description": "free your travelmap",
  "scripts": {
    "badges": "ts-node --transpile-only coverage",
    "build": "parcel build src/frontend/templates/index.pug --log-level info --no-cache && cpy src/frontend/robots.txt public",
    "test": "npm run test:backend && npm run test:frontend",
    "test:e2e": "jest -c e2e/jest.config.js",
    "test:frontend": "jest",
    "test:backend": "deno test --allow-read --allow-net --log-level info --allow-env src/backend",
    "fmt": "deno fmt src/backend api && prettier 'src/frontend/**/*' '!**/*.snap' --write",
    "deps:frontend": "ncu",
    "deps:backend": "npm run dmm -- check",
    "deps": "npm run deps:backend && npm run deps:frontend",
    "dmm": "deno run --allow-write --allow-net --allow-read https://deno.land/x/dmm@v1.3.2/mod.ts",
    "vercel:dev": "vercel dev -d",
    "upgrade:backend": "npm run dmm -- update",
    "upgrade:frontend": "ncu -u",
    "upgrade": "npm run upgrade:backend && npm run upgrade:frontend"
  },
  "app": "public/index.html",
  "targets": {
    "app": {
      "publicUrl": "./"
    }
  },
  "dependencies": {
    "bytes": "^3.1.1",
    "client-zip": "^2.0.0",
    "country-emoji": "^1.5.6",
    "geojson": "^0.5.0",
    "json2csv": "^5.0.6",
    "load-js": "^3.0.3",
    "tokml": "^0.4.0"
  },
  "devDependencies": {
    "@parcel/transformer-pug": "^2.0.1",
    "@types/google.visualization": "0.0.68",
    "@types/jest": "^27.4.0",
    "@types/json2csv": "^5.0.3",
    "autoprefixer": "^10.4.0",
    "cpy-cli": "^3.1.1",
    "cssnano": "^5.0.12",
    "jest": "^27.4.3",
    "jest-puppeteer": "^6.0.2",
    "npm-check-updates": "^12.0.2",
    "parcel": "^2.0.1",
    "postcss": "^8.4.4",
    "prettier": "^2.4.1",
    "pug": "^3.0.2",
    "puppeteer": "^13.0.0",
    "tailwindcss": "^2.2.19",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.4.0",
    "tslib": "^2.3.1",
    "typescript": "^4.5.3",
    "vercel": "^23.1.2"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com-ch:christianhaller/download-your-travelmap.git"
  },
  "keywords": [],
  "author": "Christian Haller",
  "license": "ISC"
}
